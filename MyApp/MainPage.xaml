                        </GridView.ItemTemplate>
                    </GridView>
                    <GridView x:Name="course" Grid.Column="1" ItemsSource="{Binding Courses}" ItemContainerStyle="{StaticResource GridViewItemStyle_course}" Margin="0" Style="{StaticResource GridViewStyle_course}">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock TextWrapping="Wrap"  FontSize="22" Foreground="#FF959595" FontFamily="Microsoft YaHei">
                                        <Run Text="{Binding Course.Name}"/>
                                        <LineBreak/><Run Text="{Binding Course.TeacherName}" FontSize="18"/>
                                        <LineBreak/><Run Text="{Binding Course.Location}" FontSize="18"/>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </ScrollViewer>

            <Popup x:Name="ParentedPopup" HorizontalOffset="100" VerticalOffset="200">
                <local:PopupInputContent  x:Name="myPop"/>
            </Popup>
            <Button x:Name="PreviousButton" HorizontalAlignment="Left" Margin="-5.5,22,0,0" VerticalAlignment="Top" Width="63" FontWeight="Bold" Height="43" Style="{StaticResource BackButtonStyle}" Grid.RowSpan="2" Click="PreviousButton_Click"/>
            <Button x:Name="NextButton" HorizontalAlignment="Left" Margin="1307.5,22,-4.5,0" VerticalAlignment="Top" Width="63" FontWeight="Bold" Height="43" Style="{StaticResource NextButtonStyle}" Grid.RowSpan="2" Click="NextButton_Click"/>
        </Grid>
        <Grid Name="lv" Background="{StaticResource ApplicationForegroundThemeBrush}" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock TextWrapping="Wrap" Margin="60,30,20,10" Text="{Binding Today}" Foreground="#FF959595" FontSize="28"/>
            <Button HorizontalAlignment="Left" Margin="-4.666,24,0,0" VerticalAlignment="Top" Width="43" FontWeight="Bold" Height="43" Style="{StaticResource BackButtonStyle}" Click="PreviousDayButton_Click"/>
            <Button HorizontalAlignment="Left" Margin="279.667,24,0,0" VerticalAlignment="Top" Width="43" FontWeight="Bold" Height="43" Style="{StaticResource NextButtonStyle}" Click="NextDayButton_Click"/>
            <ScrollViewer Grid.Row="1">                
                <Grid Height="{Binding GridHeight}" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <GridView Grid.Column="0" ItemsSource="{Binding Lessons}" ItemContainerStyle="{StaticResource GridViewItemStyle_daytime}" BorderThickness="0" BorderBrush="White" Style="{StaticResource GridViewStyle_time}">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock TextWrapping="Wrap" FontSize="18" TextAlignment="Center" Foreground="#FFEEEEEE" Margin="0,0,2,2">
                                    <Run Text="{Binding StartTime,Mode=TwoWay, Converter={StaticResource DateTimeToStringConverter}}"/>
                                    <LineBreak/>
                                    <Run Text=" - "/>
                                    <LineBreak/>
                                    <Run Text="{Binding EndTime, Mode=TwoWay,  Converter={StaticResource DateTimeToStringConverter}}"/>
                                </TextBlock>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <GridView Grid.Column="1" ItemsSource="{Binding DayCourses}" ItemContainerStyle="{StaticResource GridViewItemStyle_daycourse}" Margin="0" Style="{StaticResource GridViewStyle_course}">
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock TextWrapping="Wrap"  FontSize="22" Foreground="#FF959595" FontFamily="Segoe UI">
                                        <Run Text="{Binding Course.Name}"/>
                                        <LineBreak/><Run Text="{Binding Course.TeacherName}" FontSize="18"/>
                                        <LineBreak/><Run Text="{Binding Course.Location}" FontSize="18"/>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </ScrollViewer>
            <Rectangle Fill="White" HorizontalAlignment="Left" Height="2" Margin="-4.666,79,0,0" Stroke="White" VerticalAlignment="Top" Width="327.333"/>        
        </Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="HX">
                    <Storyboard x:Name="Storyboard2">
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="lv">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="fv">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Visible</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="SX"></VisualState>
                <VisualState x:Name="Filled"></VisualState>
                <VisualState x:Name="Snapped">
                    <Storyboard x:Name="Storyboard1">
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="fv">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="lv">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Visible</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
    <Page.BottomAppBar>
        <AppBar x:Name="btmBar" Height="90" Background="#FF333333" BorderBrush="#FF333333">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="Today" HorizontalAlignment="Right" Style="{StaticResource HomeAppBarButtonStyle}" Click="BackToday"/>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>
</Page>